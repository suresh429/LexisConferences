<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:visibility="visible">


            <ImageView
                android:id="@+id/articleImage1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/icon"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/articleBg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#63000000"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:visibility="visible" />

            <TextView
                android:id="@+id/articleDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/proxima_nova_regular"
                android:text="Date"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="14sp"
                 />

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/absListViewStyle"
                android:layout_width="@dimen/padding_20"
                android:layout_height="@dimen/padding_20"
                android:layout_centerInParent="true"
                android:visibility="visible" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

           <!-- <TextView
                android:id="@+id/articleDate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableStart="@drawable/ic_date_range_blue"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/proxima_nova_regular"
                android:maxLines="1"
                android:text="Date"
                android:textColor="@color/colorRed"
                android:textSize="12sp"
                tools:ignore="RtlSymmetry" />-->

            <TextView
                android:id="@+id/articleTitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:ellipsize="end"
                android:fontFamily="@font/proxima_nova_bold"
                android:minLines="3"
                android:text="Title"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />





                <TextView
                    android:id="@+id/articleCity1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:drawableStart="@drawable/ic_location_black"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:maxLines="1"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/confType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:drawableStart="@drawable/ic_baseline_web_24"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:maxLines="1"
                    android:text="Webinar"
                    android:textColor="@color/black"
                    android:textSize="12sp" />



            <TextView
                android:id="@+id/articleType1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:drawableStart="@drawable/ic_bookmark_black"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/proxima_nova_regular"
                android:maxLines="1"
                android:text="Subject"
                android:textColor="@color/black"
                android:textSize="11sp"
                tools:ignore="SmallSp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>