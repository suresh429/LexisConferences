<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77E5E5E5"
    android:orientation="vertical"
    tools:context=".activity.DashBoardActivity"
    tools:ignore="SmallSp,UseCompoundDrawables">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        tools:context=".activity.DashBoardActivity">


        <LinearLayout

            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/slider_image"
                android:layout_width="match_parent"
                android:layout_height="160dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text=""
                    android:fontFamily="@font/proxima_nova_bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:drawableStart="@drawable/ic_bookmark_black_24dp"
                    android:drawablePadding="@dimen/padding_10"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">



                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:drawableStart="@drawable/ic_date_range"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                    <TextView
                        android:id="@+id/confType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center_vertical"
                        android:text=""
                        android:drawableStart="@drawable/ic_baseline_web"
                        android:drawablePadding="5dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:visibility="gone"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:text="@string/conferences"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:id="@+id/linearSubmitAbstract"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:tint="@color/colorRed"
                                android:background="@drawable/ovalshape"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/padding_10"
                                android:src="@drawable/ic_research_paper" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:gravity="center"
                                android:text="@string/submit_abstract"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearRegister"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:tint="@color/colorRed"
                                android:background="@drawable/ovalshape"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/padding_10"
                                android:src="@drawable/ic_registration" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="@string/registration"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearBrochureDownload"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:tint="@color/colorRed"
                                android:background="@drawable/ovalshape"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/padding_10"
                                android:src="@drawable/ic_arrow_downward_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:minLines="2"
                                android:text="@string/download_brochure"
                                android:textSize="10sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/linearSessionsTracks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:tint="@color/colorRed"
                                android:background="@drawable/ovalshape"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/padding_10"
                                android:src="@drawable/ic_networking" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="@string/sessions_tracks"
                                android:textSize="10sp" />

                        </LinearLayout>






                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:tint="@color/colorRed"
                                android:background="@drawable/ovalshape"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/padding_10"
                                android:src="@drawable/ic_shedule" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="@string/schedule"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearChat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:tint="@color/colorRed"
                                android:background="@drawable/ovalshape"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/padding_10"
                                android:src="@drawable/ic_chat" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorBlack"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:gravity="center"
                                android:text="@string/chat"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearFeedback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:tint="@color/colorRed"
                                android:background="@drawable/ovalshape"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/padding_10"
                                android:src="@drawable/ic_baseline_feedback_24" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="@string/feedback"
                                android:textColor="@color/colorBlack"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:tint="@color/colorRed"
                                android:background="@drawable/ovalshape"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/padding_10"
                                android:src="@drawable/ic_feedback" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:minLines="2"
                                android:text="@string/feedback"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:tint="@color/colorRed"
                                android:background="@drawable/ovalshape"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/padding_10"
                                android:src="@drawable/ic_session_recording" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:gravity="center"
                                android:textColor="@color/colorBlack"
                                android:text="@string/session_recording"
                                android:textSize="10sp" />

                        </LinearLayout>




                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:text="@string/others"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:background="@drawable/ovalshape"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/padding_10"
                                android:tint="@color/colorRed"
                                android:src="@drawable/ic_hotel" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorBlack"

                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="@string/hotel"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:background="@drawable/ovalshape"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/padding_10"
                                android:tint="@color/colorRed"
                                android:src="@drawable/ic_travel" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorBlack"

                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="@string/travel"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:background="@drawable/ovalshape"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/padding_10"
                                android:tint="@color/colorRed"
                                android:src="@drawable/ic_sight_seeing" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorBlack"

                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="@string/sightseeing"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:alpha="0.4"
                                android:background="@drawable/ovalshape"
                                android:contentDescription="@string/app_name"
                                android:padding="@dimen/padding_10"
                                android:tint="@color/colorRed"
                                android:src="@drawable/ic_dinning" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="@string/dining"
                                android:textColor="@color/colorBlack"

                                android:textSize="10sp" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/progressbar1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</FrameLayout>

